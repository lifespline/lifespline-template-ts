{
    // don't see these files in the vscode explorer (don't forget to ignore 
    // them)
    "files.exclude": {

        // build files
        "**/dist/*.js": { "when": true },

        // build files for debugging
        "**/dist/*.js.map": { "when": true },

        // dependencies
        "node_modules": { "when": true },
    },

    // show the names of parameters in function calls
    "typescript.inlayHints.parameterNames.enabled": "all",

    // show the types of variables that don't have explicit type annotations
    "typescript.inlayHints.parameterTypes.enabled": true,

    // show the return types of functions that don't have an explicit type 
    // annotation
    "typescript.inlayHints.functionLikeReturnTypes.enabled": true,

    // show the type of class properties that don't have an explicit type annotation
    "typescript.inlayHints.propertyDeclarationTypes.enabled": true,

    // automatic imports
    "typescript.suggest.autoImports": true,

    "typescript.suggest.completeJSDocs": true,

    // explicitly enable eslint (OPT)
    "eslint.enable": true,

    // explicitly lint as code is written (OPT)
    "eslint.run": "onType",

    // explicitly don't ignore warnings (OPT)
    "eslint.quiet": true,

    "eslint.runtime": "node",

    // run eslint everytime a file TS file is saved
    "editor.codeActionsOnSave": {
        "source.fixAll.eslint": true
    },

    // typescript eslint rules (OPT)
    "eslint.validate": [
        "typescript",
        "javascript"
    ]
}